<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="model"
            type="com.example.noteapplication.domain.models.NoteModel" />
        <variable
            name="clickListener"
            type="com.example.noteapplication.app.ui.features.notes.NoteClickListener" />
    </data>
    <LinearLayout
        android:onClick="@{(view) -> clickListener.onClick(view, model)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgCall"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:src="@android:drawable/ic_notification_clear_all"
            android:tint="#000000"
            android:contentDescription="@string/note_image_content_description_string" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/noteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="@{model.noteTitle}"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noteDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="@{model.noteDetails}"
                android:textColor="#5d5d5d"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>
</layout>