<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/loginUsernameFragment">

    <fragment
        android:id="@+id/loginUsernameFragment"
        android:name="com.example.noteapplication.features.notes.app.ui.fragments.LoginUsernameFragment"
        android:label="LoginUsernameFragment" />
    <activity
        android:id="@+id/mainActivity2"
        android:name="com.example.noteapplication.features.notes.app.ui.activities.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/loginPasswordFragment"
        android:name="com.example.noteapplication.features.notes.app.ui.fragments.LoginPasswordFragment"
        android:label="LoginPasswordFragment" />
    <fragment
        android:id="@+id/editNoteFragment"
        android:name="com.example.noteapplication.features.notes.app.ui.fragments.EditNoteFragment"
        android:label="EditNoteFragment">
        <argument
            app:nullable="false"
            android:name="noteModel"
            app:argType="com.example.noteapplication.features.notes.domain.models.NoteModel"
            />
    </fragment>

    <action
        android:id="@+id/goToEditNote"
        app:destination="@id/editNoteFragment">
        <argument
            app:nullable="false"
            android:name="noteModel"
            app:argType="com.example.noteapplication.features.notes.domain.models.NoteModel"
            />
    </action>

</navigation>